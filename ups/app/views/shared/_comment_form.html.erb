<fieldset>
  <div class="field">
    <% if signed_in? %>
      <%= @current_user.name %>
    <% else %>
      <div class="field">
        <label>
          Name:
        </label>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <label>
          email:
        </label>
        <%= f.text_field :email %>
      </div>
    <% end %>
  </div>
  <div class="field">
    <label>
      comment:
    </label>
    <%= f.text_area :text, :rows => 10 %>
  </div>
  <div class="actions">
    <%= f.submit "save", :class => "continue" %>
  </div>
</fieldset>