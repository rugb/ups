<%= form_for(@edit_page) do |f| %>
  <section class="sidebar right">
    <section class="categories">
      <h3>position:</h3>
      <%= possible_page_position_options(@edit_page) %>
    </section>
  </section>
  <fieldset>
    <%= render 'errors/form', :object => @edit_page %>
    <div class="field actions">
      <label>
        title:
      </label>
      <span><%= page_title @edit_page %>
        <i>(<%= (@edit_page.int_title or "new") %>)</i></span>
      <span><%= link_to "activate", activate_page_path(@edit_page), :class => "enable" if @edit_page.activatable? %>
      </span>
      <span><%= link_to "deactivate", deactivate_page_path(@edit_page), :class => "disable" if @edit_page.deactivatable? %>
      </span>
    </div>
    <div class="field">
      <label>
        visible after:
      </label>
      <%= f.datetime_select :start_at, :order => [:day, :month, :year], :date_seperator => ".", :time_seperator => ":" %>
    </div>
    <% if @edit_page.forced_url.nil? %>
      <div class="field">
        <label>
          visible for:
        </label>
        <%= f.select :role_id, roles_options %>
      </div>
    <% end %>
    <fieldset id="content_tabs">
      <ul>
        <% @edit_page.page_contents.each do |content| %>
        <li>
          <%= link_to content.language.name, "#content_tab_"+content.language.short %>
        </li>
        <% end %>
      </ul>
      <%= render 'shared/text_form', {:f => f, :edit_page => @edit_page} %>
    </fieldset>
    <% if @edit_page.id.present? && @edit_page.forced_url.nil? %>
      <%= render 'shared/file_upload_index', :file_uploads => @edit_page.file_uploads, :edit_page => @edit_page %>
    <% end %>
    <div class="actions">
      <%= f.submit :class => "continue" %>
    </div>
  </fieldset>
<% end %>
<script type="text/javascript">
  $(function(){
      $("#content_tabs").tabs();
  })
</script>
