<%= page_text(@page) %>
<p class="footer">
  <% if @page.user.present? %>
    <span>
      author: <%= link_to @page.user.name, @page.user %>
    </span>
  <% else %>
    <span>
      <i>
        (author deleted)
      </i>
    </span>
  <% end %>
    <span>
      from: <%= @page.updated_at %>
    </span>
  <% if @page.categories.any? %>
    <span>
      categories: <%= inline_categories_for(@page) %>
    </span>
  <% end %>
</p>
<%= render 'shared/download_links', :object => @page %>

<% @page.comments.each do |comment| %>
  <%= comment.text %>
  <p class="footer">
    author:
    <% if comment.user.present? %>
      <%= link_to comment.user.name, comment.user %>
    <% else %>
      <%= comment.name %> (<%= comment.email %>)
    <% end %>
  </p>
<% end %>
<% if @page.enable_comments %>
  <%= form_for :comment, :url => create_comment_pages_path, :method => :post do |f| %>
    <fieldset>
      <div class="field">
        <% if signed_in? %>
          <%= @current_user.name %>
        <% else %>
          <div class="field">
            <label>
              Name:
            </label>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <label>
              email:
            </label>
            <%= f.text_field :email %>
          </div>
        <% end %>
      </div>
      <div class="field">
        <label>
          comment:
        </label>
        <%= f.text_area :text, :rows => 10 %>
      </div>
      <div class="actions">
        <%= f.submit "create", :class => "continue" %>
      </div>
    </fieldset>
  <% end %>
<% end %>

<% if @page.children.select{ |child| child.visible? }.any? %>
<% @page.children.each do |news| %>
<section>
  <h2><%= link_to page_title(news), make_page_path(news) %></h2>
  <% if page_excerpt(news).present? %>
  <p>
    <%= page_excerpt(news) %>
  </p>
  <% end %>
  <p class="footer">
    <% if news.user.present? %>
    <span>author: <%= link_to news.user.name, news.user %></span>
	<% else %>
	<span><i>(author deleted)</i></span>
    <% end %>
    <span>from: <%= news.updated_at %></span>
    <% if news.categories.any? %>
    <span>categories: <%= inline_categories_for news %></span>
    <% end %>
    <% if news.tags.any? %>
    <span>tags: <%= inline_tags_for news %></span>
    <% end %>
  </p>
</section>
<% end %>
<% end %>