<p class="actions">
  <%= link_to "back", events_path, :class => "back" %>
</p>

<%= form_for(@event) do |f| %>
  <fieldset>
    <%= render 'errors/form', :object => @event %>
    <div class="field">
      <label>
        Name:
      </label>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <label>
        Location:
      </label>
      <%= f.text_field :location %>
    </div>
    <div class="field">
      <label>
        Ende:
      </label>
      <%= f.datetime_select :end_at, :order => [:day, :month, :year], :date_seperator => ".", :time_seperator => ":" %>
    </div>
    <div class="field">
      <label>
        Description:
      </label>
      <%= f.text_area :description %>
    </div>
  <div class="actions">
      <%= f.submit :class => "create" %>
    </div>
  </fieldset>
<% end %>