<%= render 'errors/form', :object => @event %>
<div class="field">
  <label>
    Name:
  </label>
  <%= f.text_field :name %>
</div>
<div class="field">
  <label>
    Location:
  </label>
  <%= f.text_field :location %>
</div>
<div class="field">
  <label>
    Ende:
  </label>
  <%= f.datetime_select :end_at, :order => [:day, :month, :year], :date_seperator => ".", :time_seperator => ":" %>
</div>
<div class="field">
  <label>
    Description:
  </label>
  <%= f.text_area :description %>
</div>