<%= form_for(@link) do |f| %>
<section class="sidebar right">
  <% if Category.first.present? %>
    <section class="categories">
      <h3>categories:</h3>
      <ul>
        <% f.fields_for :link_categories do |cat_f| %>
          <li>
            <%= cat_f.check_box :checked %><%= category_name(cat_f.object.category) %>
            <%= cat_f.hidden_field :category_id %>
          </li>
        <% end %>
      </ul>
    </section>
  <% end %>
</section>
<fieldset>
  <%= render 'errors/form', :object => @link %>
  <div class="field">
    <label>
      title:
    </label>
      <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>
      target:
    </label>
    <%= f.text_field :href %>
  </div>
  <div class="actions">
    <%= f.submit :class => "continue" %>
  </div>
</fieldset>
<% end %>