<section class="sidebar right">
  <% if Category.first.present? %>
  <section class="categories">
    <h3>categories:</h3>
    <ul>
      <% f.fields_for :page_categories do |cat_f| %>
      <li>
        <%= cat_f.check_box :checked %><%= category_name(cat_f.object.category) %>
        <%= cat_f.hidden_field :category_id %>
      </li>
      <% end %>
    </ul>
  </section>
  <section class="tags">
    <h3>tags:</h3>
  </section>
  <% end %>
</section>
<fieldset>
  <%= render 'errors/form', :object => @edit_post %>
  <div class="field">
    <label>
      visible after:
    </label>
    <%= f.datetime_select :start_at, :order => [:day, :month, :year], :date_seperator => ".", :time_seperator => ":" %>
  </div>
  <fieldset id="content_tabs">
    <ul>
      <% @edit_post.page_contents.each do |content| %>
      <li>
        <%= link_to content.language.name, "#content_tab_"+content.language.short %>
      </li>
      <% end %>
    </ul>
    <% f.fields_for :page_contents do |content_fields| %>
    <%= content_fields.hidden_field :language_id %>
    <div id="<%= "content_tab_"  + content_fields.object.language.short %>">
      <div class="field">
        <label>
          in language:
        </label>
        <%= content_fields.object.language.name %>
      </div>
      <div class="field">
        <label>
          title:
        </label>
        <%= content_fields.text_field :title %>
      </div>
      <div class="field">
        <label>
          text:
        </label>
        <%= content_fields.text_area :text %>
      </div>
      <div class="field">
        <label>
          excerpt:
        </label>
        <%= content_fields.text_area :excerpt, :rows => 3 %>
      </div>
    </div>
    <% end %>
  </fieldset>
  <fieldset>
    <% if @edit_post.file_uploads.present? %>
      <table>
        <thead>
          <tr>
            <th>
              Filename
            </th>
            <th>
              Filesize
            </th>
            <th>
              Counter
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @edit_post.file_uploads.each do |file_upload| %>
            <tr>
              <td>
                <%= link_to file_upload.filename, download_file_path(file_upload) %>
              </td>
              <td>
                <%= number_to_human_size(file_upload.file.size) %>
              </td>
              <td>
                <%= file_upload.count %>
              </td>
              <td class="action">
                <%= link_to "download", download_file_path(file_upload), :class => "download" %>
              </td>
              <td class="actions">
                <%= link_to "edit", file_upload, :class => "edit" %>
              </td>
              <td class="actions">
                <%= link_to "delete", file_upload, :confirm => "Are you sure?", :method => :delete, :class => "delete",  %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
    <p class="actions">
      <%= link_to "upload file", new_file_upload_with_page_path(@edit_post.id), :class => "new"%>
    </p>
  </fieldset>
  <div class="actions">
    <%= f.submit :class => "continue" %>
  </div>
</fieldset>
<script type="text/javascript">
  $(function(){
      $("#content_tabs").tabs();
  })
</script>
