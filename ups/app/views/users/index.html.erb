<table>
  <thead>
    <tr>
      <th>
        openid
      </th>
      <th>
        name
      </th>
      <th>
        fullname
      </th>
      <th>
        email
      </th>
      <th>
        role
      </th>
      <th>
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
<% @users.each do |user| %>
    <tr>
      <td>
        <%= user.openid %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td>
        <%= user.fullname %>
      </td>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= user.role %>
      </td>
      <td class="actions">
          <%= link_to "edit", edit_user_path(user), :class => "edit" %>
      </td>
      <% if @current_user != user %>
      <td class="actions">
          <%= link_to "delete", user, :confirm => "Are you sure?", :method => :delete, :class => "delete",  %>
      </td>
      <% else %>
      <td>
      </td>
      <% end %>
    </tr>
<% end %>
  </tbody>
</table>