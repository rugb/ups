<!DOCTYPE html>
<html>
  <head>
    <title><%= make_title %></title>
	<%= auto_discovery_link_tag :rss, :controller => :news, :action => :rss %>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <header>
      <h1><%= link_to Conf.get_web_name, root_path %></h1>
      <nav><%= render 'layouts/user_menu' %><%= link_to "credits", credits_path %></nav>
    </header>
    <nav id="menu">
      <%= render 'layouts/menu' %>
    </nav>
    <section id="content">
      <% if make_page_title.present? %>
      <h1><%= make_page_title %></h1>
      <% end %>
      <% flash.each do |key, value| %>
      <div class="flash <%= key %>">
        <%= value %>
      </div>
      <% end %>
      <%= yield %>
	  <div class="clear"></div>
    </section>
    <footer>
      <%= render 'layouts/categories' %>
      <%= render 'layouts/tags' %>
      <%= render 'layouts/languages' %>
      <%= debug(params) if Rails.env.development? %>
      <%= @debug if @debug.present? %>
    </footer>
  </body>
</html>
