<!DOCTYPE html>
<html>
  <head>
    <title><%= make_title %></title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <header>
      <h1><%= link_to "ups - university project system", root_path %></h1>
      <nav><%= user_links %></nav>
    </header>
    <nav id="menu">
      <%= render 'layouts/menu' %>
    </nav>
    <section id="content">
      <% if make_page_title.present? %>
      <h1><%= make_page_title %></h1>
      <% end %>
      <% flash.each do |key, value| %>
      <div class="flash <%= key %>">
        <%= value %>
      </div>
      <% end %>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </section>
    <footer>
      <%= render 'layouts/categories' %>
      <%= render 'layouts/tags' %>
      <%= render 'layouts/languages' %>
    </footer>
  </body>
</html>
