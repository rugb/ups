<ul>
  <% visible_children_pages(nil).each do |page| %>
  <li>
    <%= link_to page_title(page), make_page_path(page) %>
    <% children = visible_children_pages(page) %>
    <% if children.any? %>
    <ul>
      <% children.each do |child| %>
      <li>
        <%= link_to page_title(child), make_page_path(child) %>
      </li>
      <% end %>
    </ul>
    <% end %>
  </li>
  <% end %>
</ul>
<div class="clear">
</div>
